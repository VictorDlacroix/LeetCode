/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode(int x) : val(x), left(NULL), right(NULL) {}
 * };
 */
class Solution {
public:
    bool isValidBST(TreeNode* root) {
        TreeNode* tmp;
        if(!root) return true;
        
        tmp = root->left;
        
        while(tmp){
            if(root->val <= tmp->val)
                return false;
            
            tmp = tmp->right;
        }
        
        tmp = root->right;
        
        while(tmp){
            if(root->val >= tmp->val)
                return false;
            
            tmp = tmp->left;
        }
        
        return isValidBST(root->left) && isValidBST(root->right);
    }
};
